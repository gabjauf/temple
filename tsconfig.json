{
	"compilerOptions": {
		"module": "es2022",
		"target": "es2022",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"outDir": "lib"
	},
	"lib": ["es2022"],
	"exclude": ["./templates", "./spikes"]
}
